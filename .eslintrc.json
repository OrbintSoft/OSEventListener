{
    "root": true,
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "eqeqeq": ["error"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-empty-function": ["off"],
        "indent": ["warn", "tab"],
        "no-unused-vars": ["warn"],
        "key-spacing": ["warn", { "beforeColon": false }],
        "keyword-spacing": ["warn"],
        "brace-style": ["warn", "1tbs"]
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    }
}